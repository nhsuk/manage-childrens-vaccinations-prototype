{%- from "_components/icon/macro.njk" import appIcon -%}
{% if outcome == OUTCOME.VACCINATED %}
  {% set icon = 'tick' %}
  {% set color = 'green' %}
{% elif outcome == OUTCOME.NO_CONSENT %}
  {% set icon = 'cross' %}
  {% set color = 'red' %}
{% elif outcome == OUTCOME.COULD_NOT_VACCINATE %}
  {% set icon = 'cross' %}
  {% set color = 'orange' %}
{% elif outcome == OUTCOME.NO_OUTCOME_YET %}
  {% set color = 'white' %}
{% endif %}

<div
  class="app-outcome-tag nhsuk-tag nhsuk-tag--{{ color }}"
  style="width: 100%"
>
  {% if icon %}
    {{ appIcon({ type: icon }) }}
  {% endif %}
  <span class="nhsuk-u-font-size-16">
    {{ outcome }}
  </span>
</div>
