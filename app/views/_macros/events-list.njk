{% macro eventsList(items) -%}
<ul class="nhsuk-list{% if items.length > 1 %} nhsuk-list--bullet{% endif %} app-list--events">
{% for item in items | reverse %}
  <li>
    <p class="nhsuk-body">{{ item.name }}</p>
    <p class="nhsuk-hint nhsuk-u-font-size-16">
      {%- if item.user -%}
        <a href="mailto:{{ item.user.email }}">{{ item.user.fullName }}</a>,
      {% endif -%}
      {{ item.date | govukDate("truncate") }}
      {% if not item.name | arrayOrStringIncludes("paper") %}
       at {{ item.date | govukTime }}
      {% endif %}
    </p>
  </li>
{% endfor %}
</ul>
{% endmacro %}
